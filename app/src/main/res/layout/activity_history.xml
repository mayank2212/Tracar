<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:ignore="MissingPrefix"
    tools:context="com.mayank.tracar.activties.HistoryActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewfromdate"
        android:hint="Select From Date and Time"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        fontPath="fonts/arial.ttf"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/from_textview" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fontPath="fonts/arial.ttf"
        android:textColor="@color/text_color"
        android:textSize="25sp"
        android:text="From"
        android:textStyle="bold"
        android:id="@+id/from_textview"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fontPath="fonts/arial.ttf"
        android:textColor="@color/text_color"
        android:textSize="25sp"
        android:text="To"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/from_textview"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Select To Date and Time"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        fontPath="fonts/arial.ttf"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignEnd="@+id/textViewfromdate"
        android:layout_toEndOf="@+id/from_textview" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/histoty_recycle"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/textView4"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
